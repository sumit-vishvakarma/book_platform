<h1 class="text-3xl font-bold mb-6">Trending Book Recommendations</h1>

<% if user_signed_in? %>
  <%= link_to "+ Recommend a Book", new_recommendation_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold px-4 py-2 rounded mb-6 inline-block" %>
<% else %>
  <p class="text-gray-600 mb-6 italic">Sign in to recommend a book</p>
<% end %>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <%= render @recommendations %>
</div>
