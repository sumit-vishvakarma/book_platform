<h2 class="text-2xl font-bold mb-4">Book: <%= @recommendation.book.title %></h2>
<p class="text-gray-600 italic">Review: "<%= @recommendation.review %>"</p>

<!-- Comments List -->
<h3 class="text-xl mt-6 mb-2 font-semibold">Comments</h3>
<%= turbo_frame_tag "comments" do %>
  <%= render @recommendation.comments %>
<% end %>

<!-- New Comment Form -->
<% if user_signed_in? %>
  <%= form_with model: [@recommendation, Comment.new], local: false do |f| %>
    <div class="mb-4">
      <%= f.text_area :content, placeholder: "Write a comment...", rows: 2, class: "border rounded w-full p-2" %>
    </div>
    <%= f.submit "Post Comment", class: "bg-blue-500 text-white px-3 py-1 rounded" %>
  <% end %>
<% else %>
  <p class="text-sm text-gray-400">Sign in to comment.</p>
<% end %>
