<h2 class="text-2xl font-bold mb-4">Recommend a Book</h2>

<%= form_with model: @recommendation, local: true do |f| %>
  <div class="mb-4">
    <%= f.label :book_id, "Choose a Book", class: "block font-semibold mb-1" %>
    <%= f.collection_select :book_id, Book.all, :id, :title, {}, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <div class="mb-4">
    <%= f.label :review, "Your Review", class: "block font-semibold mb-1" %>
    <%= f.text_area :review, rows: 5, maxlength: 250, class: "border rounded px-3 py-2 w-full" %>
  </div>

  <%= f.submit "Submit", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
